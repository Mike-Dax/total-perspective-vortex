{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "es2019",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "baseUrl": ".",
    "outDir": "./lib",
    "jsx": "react",
    "resolveJsonModule": true
  },
  "include": ["./src/**/*", "./test/**/*", "typings/*.d.ts", "index.ts"]
}
